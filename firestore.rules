rules_version = '2';

service cloud.firestore {

  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth.uid != null;
    }

    function isUserAdopter(adopterId) {
      return isAuthenticated() &&
             'adopter' in request.auth.token &&
             request.auth.token.adopter == adopterId;
    }

    function isAdmin() {
      return isAuthenticated() &&
             'admin' in request.auth.token &&
             request.auth.token.admin == true;
    }

    match /adopters/{adopterId} {
      allow read: if isAdmin() || isUserAdopter(adopterId);
      allow write: if isAdmin() || isUserAdopter(adopterId);
    }

    match /adoptionApplications/{adoptionApplicationId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /adoptionContracts/{adoptionContractId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /animals/{animalId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /animalHealths/{animalHealthId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /enclosures/{enclosureId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /shelters/{shelterId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
