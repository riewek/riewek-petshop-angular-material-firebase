<?xml version="1.0" encoding="UTF-8"?>
<entities>
    
    <entity name="Animal" nameShortForm="an" namePlural="Animals" cluster="Tierverwaltung">
        <attr name="Species" type="Text" required="true"/>
        <attr name="Breed" type="Text" required="true"/>
        <attr name="BirthDate" type="Date" required="true"/>
        <attr name="Sex" type="Enum" required="true" values="male,female,unknown"/>
        <attr name="IntakeDate" type="Date" required="true"/>
        <attr name="HealthStatus" type="Enum" required="true" values="Healthy,Warning,Critical,Unknown"/>
        <attr name="EnclosureId" type="Entity" required="false" entityRef="Enclosure" cardinality="ManyToOne"/>
        <attr name="Photos" type="File" required="false" cardinality="OneToMany"/>
        <attr name="Adoptable" type="Bool" required="true"/>
    </entity>

    <entity name="Adopter" nameShortForm="ad" namePlural="Adopters" cluster="Adoptionsverwaltung">
        <attr name="Name" type="Text" required="true"/>
        <attr name="Contact" type="Text" required="true"/>
        <attr name="Address" type="Text" required="true"/>
        <attr name="Housing" type="Text" required="true"/>
        <attr name="Experience" type="Text" required="true"/>
    </entity>

    <entity name="AdoptionApplication" nameShortForm="aa" namePlural="AdoptionApplications" cluster="Adoptionsverwaltung">
        <attr name="AdopterId" type="Entity" required="true" entityRef="Adopter" cardinality="ManyToOne"/>
        <attr name="AnimalId" type="Entity" required="true" entityRef="Animal" cardinality="ManyToOne"/>
        <attr name="CreatedAt" type="Date" required="true"/>
        <attr name="Status" type="Enum" required="true" values="submitted,screening,reserved,approved,rejected"/>
    </entity>

    <entity name="AdoptionContract" nameShortForm="ac" namePlural="AdoptionContracts" cluster="Adoptionsverwaltung">
        <attr name="AdoptionApplicationId" type="Entity" required="true" entityRef="AdoptionApplication" cardinality="OneToOne"/>
        <attr name="ContractUrl" type="File" required="false"/>
        <attr name="SignedAt" type="Date" required="false"/>
        <attr name="Fee" type="Number" required="true"/>
    </entity>

    <entity name="Enclosure" nameShortForm="en" namePlural="Enclosures" cluster="Infrastruktur">
        <attr name="Name" type="Text" required="true"/>
        <attr name="Type" type="Enum" required="true" values="indoor,outdoor"/>
        <attr name="Capacity" type="Number" required="true"/>
        <attr name="Occupied" type="Number" required="true"/>
        <attr name="Notes" type="Text" required="false"/>
    </entity>

    <entity name="AnimalHealth" nameShortForm="ah" namePlural="AnimalHealths" cluster="Gesundheitsverwaltung">
        <attr name="AnimalId" type="Entity" required="true" entityRef="Animal" cardinality="ManyToOne"/>
        <attr name="Date" type="Date" required="true"/>
        <attr name="Type" type="Enum" required="true" values="checkup,vaccination,injury"/>
        <attr name="Notes" type="Text" required="true"/>
        <attr name="Vet" type="Text" required="false"/>
        <attr name="Meds" type="Text" required="false" cardinality="OneToMany"/>
    </entity>

    <entity name="Shelter" nameShortForm="sh" namePlural="Shelters" cluster="Infrastruktur">
        <attr name="Name" type="Text" required="true"/>
        <attr name="Location" type="Text" required="true"/>
        <attr name="EnclosureIds" type="Entity" required="true" entityRef="Enclosure" cardinality="OneToMany"/>
    </entity>

</entities>